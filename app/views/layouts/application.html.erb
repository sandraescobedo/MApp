<!DOCTYPE html>
<html>
  <head>
    <title>Mapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <p class="navbar-text pull-right">
    <% if user_signed_in? %>
      <%=t('login_as')%> <strong><%= current_user.email %></strong>.
      <%= link_to t('profile'), edit_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to t('exit'), destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
    <% else %>
      <%= link_to t('register'), new_user_registration_path, :class => 'navbar-link'  %> |
      <%= link_to t('access'), new_user_session_path, :class => 'navbar-link'  %>
    <% end %>
    </p>
    <ul class="nav">
      <li class="active"><a href="/flights"><%=t('flights')%></a></li>
    </ul>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
